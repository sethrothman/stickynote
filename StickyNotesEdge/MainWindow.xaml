<Window 
    x:Class="StickyNotesEdge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StickyNotesEdge"
        xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
        Title="StickyNotesEdge"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Height="270"
        Width="Auto"
        Opacity="0"
        Visibility="Hidden">
    <Border Background="#40000000" VerticalAlignment="Bottom">
        <Grid Height="270" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Left arrow -->
                <ColumnDefinition Width="*"/>
                <!-- Notes + Add -->
                <ColumnDefinition Width="Auto"/>
                <!-- Right arrow -->
                <ColumnDefinition Width="Auto"/>
                <!-- Close button -->
            </Grid.ColumnDefinitions>

            <!-- Left Arrow (always visible) -->
            <Button x:Name="LeftArrowButton"
                Grid.Column="0"
                Width="30" Height="30"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="←"
                Click="LeftArrowButton_Click"
                    />

            <!-- Notes + Add Button (expand to fill available width) -->
            <StackPanel x:Name="NotesContainerPanel"
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch">
                <ScrollViewer x:Name="NotesScrollViewer"
                      Height="270"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      MinWidth="100">
                    <ItemsControl x:Name="NotesPanel"
                          ItemsSource="{Binding Notes}"
                          Margin="0"
                          xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.IsDropTarget="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                <!-- Add Button right after notes -->
                <Button Content="＋"
                Width="48" Height="120"
                Margin="10,0,0,0"
                FontSize="32"
                Click="AddNote_Click"
                VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Right Arrow (always visible) -->
            <Button x:Name="RightArrowButton"
                Grid.Column="2"
                Width="30" Height="30"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Content="→"
                Click="RightArrowButton_Click"
                />

            <!-- Close Button, at far right -->
            <Button Grid.Column="3"
            Width="30" Height="30"
            Margin="10"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            ToolTip="Close"
            Click="QuitButton_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFDC143C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <TextBlock Text="✕" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>
</Window>
